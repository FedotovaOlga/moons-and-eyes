<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="Creative Jewelry and 3D Models Shop">
		<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
		<meta name="generator" content="Jekyll v4.1.1">
		<title>
			{% block title %}Moons and Eyes
			{% endblock %}
		</title>

		<!-- Bootstrap core CSS -->
		<link href="{{asset('assets/css/style.css')}}" rel="stylesheet">
		<link
		href="{{asset ('assets/css/bootstrap.min.css')}}" rel="stylesheet">


		<!-- Custom styles for this template -->
		<link href="{{asset('assets/css/carousel.css')}}" rel="stylesheet">
		<link
		href="{{asset('assets/css/custom.css')}}" rel="stylesheet">

		<!-- Custom fonts for this template -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Macondo&family=Nova+Round&family=Pridi:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">

		<script src="https://unpkg.com/feather-icons"></script>
	</head>
	<body
		class="{% if app.request.attributes.get('_route') == 'app_home' %}home-page{% else %}other-page{% endif %}">
		<!-- HEADER -->
		<header data-bs-theme="dark">
			<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
				<div class="container-fluid">
					<a class="navbar-brand macondo-regular" href="{{ path ('app_home')}}">Moons and Eyes</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse menu-black" id="navbarCollapse">
						<ul class="navbar-nav me-auto mb-2 mb-md-0">
							<li class="nav-item">
								<a class="nav-link active nova-round-regular" aria-current="page" href="{{ path ('app_home')}}">Home</a>
							</li>
							{# allCategories is a variable passed from the controller used to get the names of the categories and put them into links :  #}
							{% for category in allCategories %}
								<li class="nav-item">
									<a class="nav-link nova-round-regular" href="{{ path ('app_category', {slug : category.slug}) }}">{{category.name}}</a>
								</li>
							{% endfor %}
						</ul>
						<div class="speed-menu">
							{% if app.user %}
								<a href="{{ path('app_account') }}" class="nova-round-regular">
									<i data-feather="user"></i>
									{{app.user.firstname}}</a>
							{% else %}
								<a href="{{ path('app_login') }}">
									<i data-feather="user"></i>
								</a>
							{% endif %}
							<a href="{{path ('app_cart')}}" class="nova-round-regular">
								<i data-feather="shopping-cart"></i>
								<span class="badge text-bg-light">{{fullCartQuantity}}</span>
							</a>
						</div>
					</div>
				</div>
			</nav>
		</header>

		<main role="main">
			{% if block ('hero') is defined %}
				<div class="hero-banner d-flex justify-content-center align-items-center mb-4">
					<img src="{{ asset('assets/images/logo-white.png') }}" alt="Logo">
				</div>
			{% endif %}

			<!-- Marketing messaging and featurettes
																											    ================================================== -->
			{# add top margin if block 'hero' is not here #}
			<div
				class="container marketing {% if block ('hero') is not defined %} mt-5 {% endif %}">
				{# read and display all flash messages #}
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert mt-5 alert-{{ label }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}

				{% block body %}{% endblock %}

			</div>
			<!-- /.container -->
		</main>
		<!-- FOOTER -->
		<footer class="container pridi-light">
			<p class="float-right">
				<a href="#" class="link">Back to top</a>
			</p>
			<p>&copy; 2017-2024 Moons and Eyes &middot;
				<a href="#" class="link">Privacy</a>
				&middot;
				<a href="#" class="link">Terms</a>
			</p>
		</footer>

		<script src="{{asset ('assets/js/bootstrap.bundle.min.js')}}"></script>
		<script src="{{asset ('assets/js/global.js')}}"></script>
	</body>
</html>
