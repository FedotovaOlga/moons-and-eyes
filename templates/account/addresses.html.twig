{% extends 'base.html.twig' %}

{% block body %}

	<div class="container my-5">
		<h1>Members area</h1>

		<div class="row">
			<div class="col-md-3">
				{% include 'account/_menu.html.twig' %}
			</div>
			<div class="col-md-9">
				<div class="d-flex justify-content-between">
					<h5>My addresses</h5>
					<a href="{{ path('app_account_address_form')}}" class="btn btn-light">Add an address</a>
				</div>

				{% if app.user.addresses|length == 0 %}
					<p>You have not yet registered an address in the Moons and Eyes shop.</p>
				{% else %}
					<div class="row">
						{% for address in app.user.addresses %}
							<div class="col-md-4 mt-2">
								<div class="bg-light p-2 text-center">
									<strong>{{address.firstname}}
										{{address.lastname}}<br></strong>
									{{address.address}}<br>
									{{address.postal}},
									{{address.city}}<br>
									{{address.country}}<br>
									<a href="{{ path('app_account_address_form', {id : address.id})}}" class="small text-secondary">Modify</a>
									<a href="{{ path('app_account_address_delete', {id : address.id})}}" class="small text-secondary">Delete</a>
								</div>
							</div>
						{% endfor %}
					</div>
				{% endif %}

			</div>
		</div>
	{% endblock %}
